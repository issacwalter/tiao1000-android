<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <View 
        android:layout_width="125dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"/>
	<ScrollView
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:background="#4e4947"
	    android:layout_weight="1">
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:id="@+id/buttons_container">
	        
	    	<Button 
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:background="@drawable/menu_button"
	    	    android:textColor="#ffffff"
	    	    android:gravity="left|center_vertical"
	    	    android:paddingLeft="5dp"
	    	    android:textSize="18sp"
	    	    android:text="@string/zdmddd"
	    	    android:drawableRight="@drawable/arrow_white"
	    	    android:id="@+id/zdmddd"/>
	    	<Button 
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:background="@drawable/menu_button"
	    	    android:textColor="#ffffff"
	    	    android:gravity="left|center_vertical"
	    	    android:paddingLeft="5dp"
	    	    android:textSize="18sp"
	    	    android:text="@string/mylike"
	    	    android:drawableRight="@drawable/arrow_white"
	    	    android:id="@+id/mylike"/>
	    	<Button 
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:background="@drawable/menu_button"
	    	    android:textColor="#ffffff"
	    	    android:gravity="left|center_vertical"
	    	    android:paddingLeft="5dp"
	    	    android:textSize="18sp"
	    	    android:text="@string/myfavor"
	    	    android:drawableRight="@drawable/arrow_white"
	    	    android:id="@+id/myfavor"/>
	    	<Button 
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:background="@drawable/menu_button"
	    	    android:textColor="#ffffff"
	    	    android:gravity="left|center_vertical"
	    	    android:paddingLeft="5dp"
	    	    android:textSize="18sp"
	    	    android:text="@string/myshare"
	    	    android:drawableRight="@drawable/arrow_white"
	    	    android:id="@+id/myshare"/>
	    	<Button 
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:background="@drawable/menu_button"
	    	    android:textColor="#ffffff"
	    	    android:gravity="left|center_vertical"
	    	    android:paddingLeft="5dp"
	    	    android:textSize="18sp"
	    	    android:text="@string/discover_hot"
	    	    android:drawableRight="@drawable/arrow_white"
	    	    android:id="@+id/discover_hot"/>
	    	<Button 
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:background="@drawable/menu_button"
	    	    android:textColor="#ffffff"
	    	    android:gravity="left|center_vertical"
	    	    android:paddingLeft="5dp"
	    	    android:textSize="18sp"
	    	    android:text="@string/discover_category"
	    	    android:drawableRight="@drawable/arrow_white"
	    	    android:id="@+id/discover_category"/>
	    	<Button 
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:background="@drawable/menu_button"
	    	    android:textColor="#ffffff"
	    	    android:gravity="left|center_vertical"
	    	    android:paddingLeft="5dp"
	    	    android:textSize="18sp"
	    	    android:text="@string/photo"
	    	    android:drawableRight="@drawable/arrow_white"
	    	    android:id="@+id/photo"/>
	    	<Button 
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:background="@drawable/menu_button"
	    	    android:textColor="#ffffff"
	    	    android:gravity="left|center_vertical"
	    	    android:paddingLeft="5dp"
	    	    android:textSize="18sp"
	    	    android:text="@string/search"
	    	    android:drawableRight="@drawable/arrow_white"
	    	    android:id="@+id/menu_search"/>
	    	<Button 
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:background="@drawable/menu_button"
	    	    android:textColor="#ffffff"
	    	    android:gravity="left|center_vertical"
	    	    android:paddingLeft="5dp"
	    	    android:textSize="18sp"
	    	    android:text="@string/login"
	    	    android:drawableRight="@drawable/arrow_white"
	    	    android:id="@+id/login"/>
	    	<Button 
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:background="@drawable/menu_button"
	    	    android:textColor="#ffffff"
	    	    android:gravity="left|center_vertical"
	    	    android:paddingLeft="5dp"
	    	    android:textSize="18sp"
	    	    android:text="@string/registe"
	    	    android:drawableRight="@drawable/arrow_white"
	    	    android:id="@+id/registe"/>
	    	<Button 
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:background="@drawable/menu_button"
	    	    android:textColor="#ffffff"
	    	    android:gravity="left|center_vertical"
	    	    android:paddingLeft="5dp"
	    	    android:textSize="18sp"
	    	    android:text="@string/about"
	    	    android:drawableRight="@drawable/arrow_white"
	    	    android:id="@+id/about"/>
			<Button 
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:background="@drawable/menu_button"
	    	    android:textColor="#ffffff"
	    	    android:gravity="left|center_vertical"
	    	    android:paddingLeft="5dp"
	    	    android:textSize="18sp"
	    	    android:text="@string/exit"
	    	    android:drawableRight="@drawable/arrow_white"
	    	    android:id="@+id/exit"/>
	    </LinearLayout>
	</ScrollView>
</LinearLayout>
