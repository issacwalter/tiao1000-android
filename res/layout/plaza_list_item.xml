<?xml version="1.0" encoding="utf-8"?>
<com.zdmddd.view.plaza.component.PlazaListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/plaza_list_item_click"
    android:orientation="horizontal">
    
    <com.zdmddd.view.plaza.component.PlazaListImageView 
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/app_name"
        android:id="@+id/blog_image"/>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">
        
        <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/blog_content"/>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="#F1547F"
            android:id="@+id/price"/>
    </LinearLayout>
    
    
</com.zdmddd.view.plaza.component.PlazaListItem>