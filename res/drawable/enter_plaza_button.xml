<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
		<shape>
			<gradient android:startColor="#FFA200" android:endColor="#FFA200"/>
			<padding android:left="0dp" android:top="10dp"
				android:right="0dp" android:bottom="10dp" />
			<stroke android:width="1px" android:color="#D8D8D8"/>
		</shape>
	</item>
 
 
	<item>
		<shape>
			<corners android:radius="0dip" />
			<padding android:left="0dp" android:top="10dp"
				android:right="0dp" android:bottom="10dp" />
			<gradient android:startColor="#F7F7F7" android:endColor="#F7F7F7"/>
			<stroke android:width="1px" android:color="#D8D8D8"/>
		</shape>
	</item>
</selector>